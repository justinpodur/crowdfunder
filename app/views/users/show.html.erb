<div class="user-container">
  
  <div class="row">  
    <div class="large-4 columns">
      <%= image_tag @user.image, :class => 'user-image' %>
    </div>
    

          <div class="large-8 columns">
            <div class="about-user">
              <h1><%= @user.name %></h1>
              <ul class="user-links-container">
                <li class="user-links">
                  
                  <%= link_to '', edit_user_path(@user), :class => 'fa fa-pencil' %>
                </li>
                <li class="user-links">
                  <%= link_to "", user_path(current_user), :method => :delete, :class => 'fa fa-trash-o'  %>
                </li>
                <li class="user-links"><%= link_to '', new_project_path, :class => 'fa fa-plus' %></li>
              </ul>

              <p><strong>Bio: </strong><%=@user.bio%></p>
            </div>
          </div>
  </div>

     
</div>