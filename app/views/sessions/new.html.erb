<h1>Log in</h1>

<%= form_tag sessions_path do %>
  <div class="field">
  	<div class="small-6 columns">
  		<%= label_tag :email %><br/>
    	<%= text_field_tag :email, params[:email] %>
  	</div>
    
  </div>
  <div class="field">
  	<div class="small-6 columns">
  		<%= label_tag :password %><br/>
    	<%= password_field_tag :password %>
  	</div>
    
  </div>
  <!-- thislogin button needs to be centered -->
  <div class="actions">
  	<%= submit_tag "Log in", :class => 'button [radius button]'%>
  </div>
<% end %>