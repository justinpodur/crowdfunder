<div class="row popular-projects-container">
  
  <% @projects.each do |project| %>
    <div class="row popoular-posts">
      <div class="large-4 columns">
        <figure class='each-project'>
          <div>
            <%= image_tag project.image %>
          </div>
            <figcaption>
              <h4 class="project-caption-header"><%= project.name %></h4>
              <p><%= project.owner.name%></p>
              <p><%= truncate(project.description, length: 40) %></p>
              <p>Deadline: <%= project.deadline.strftime("%A, %B %d, %Y") %></p>
            </figcaption>
        </figure>
      </div>
      
      </div>
  <% end %>
    
 </div>