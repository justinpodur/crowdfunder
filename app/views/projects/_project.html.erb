<div class="popular-projects-container">
  
  <% @projects.each do |project| %>
    <div class="row popoular-posts">
      <div class="large-4 columns">
        <figure class='each-project'>
          <div>
            <%=image_tag (project.image) %>
          </div>
            <figcaption>
              <h4 class="project-caption-header text-center"><%= link_to project.name, project_path(project) %></h4>
              <p class="text-center"><%= project.owner.name%></p>
              <p class="text-center"><%= project.deadline.strftime("%A, %B %d, %Y") %></p>
              <p><%= truncate(project.description, length: 200) %></p>
            </figcaption>
        </figure>
      </div>
      
      </div>
  <% end %>
    
 </div>