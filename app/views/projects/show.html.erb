
 <% if current_user %>
  <div class= "row">
    <div class="large-12 columns" role="content">
      <h1><%= @project.name %></h1>
      <hr/>
      <!-- This code is for the image and the description -->
      <article>
          <div class="large-3 columns">
              <%= image_tag @project.image %><br>
              <div class="panel">
                <h5>Created By</h5>
                  <%= link_to @project.owner.name %>
              </div>
          </div> 

          <div class="large-6 columns">
            <h4>Project description :</h4>
            <p><%= @project.description %></p>
          </div> 
          <h3></h3>
               
      </article>

    <!-- This code is for the info section -->
      <aside class="large-3 columns">
        <div class="panel">
          <h5>Info</h5>
          <ul class="side-nav">
            <li>
              <div>
                Backers:
                <%= @project.pledges.size %>
              </div>
            </li>
            <li>
              <div>
                Goal: 
                $<%= @project.goal_in_cents %>
              </div>
            </li>
            <li>
              <div>
                Deadline:
                <%= @project.deadline.strftime("%A, %B %d, %Y")  %>
              </div>
            </li>
          </ul>
          <div class="button [radius button]">
             <%= link_to 'Make a pledge', new_project_pledge_path(@project) %><br>
             <small>$5 minimum pledge</small>
          </div>
         

          <div class="panel callout">
            <h5>Rewards</h5>
            <div>
              <% if @project.rewards != nil %>
                <% @project.rewards.each do |r| %>
                  <p>Level : $<%= r.level %></p>
                  <p>Package : <br><%= r.name %></p>
                  <p>Description :<%= r.description %></p>
                <% end %>
              <% end %>
            </div>
          </div>

        </div>
      </aside>
 
    </div>



<!-- This code is for the pledges panel -->

  <div class="row">
    <div class="large-12 columns">
      <div class = "panel">

        <h3>Pledges</h3>

        <% @project.pledges.each do |pledge| %>
          <p>
            <%= pledge.amount_in_cents %><br>
            <% if pledge.user != nil %>
              <em> by <%= pledge.user.name %></em>
              Added on: <%= pledge.created_at %>
            <% else %>
              <p>There are currently no pledges</p>
            <% end %>
          </p>
        <% end %>
      </div>
    </div>
  </div>

<% else %>
    <p>Please <%= link_to "log in", new_session_path %> to add a pledge.</p> 

<% end %>


