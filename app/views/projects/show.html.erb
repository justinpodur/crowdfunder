 <% if current_user %>
 <div class="row">
    <div class="large-12 columns">
      <h1><%= @project.name %></h1>
      <hr/>
    </div>
  </div>
 
 
   <!-- then i want the description to go below -->

  <div class="row">
 
     
    <div class="large-9 columns" role="content">
        
      <article>
          <div class="large-6 columns">
              <%= image_tag @project.image %><br>
              <div class="panel">
                <h5>Created By</h5>
                  <%= link_to @project.owner.name %>
                  <%= image_tag @project.owner.image %>
              </div>
          </div>
          
     
        <h3><a href="#">Project description</a></h3>
        <div class="row">
          <div class="large-6 columns">
            <p><%= @project.description %></p>
          </div> 
        </div>
      </article>
 
    </div>
 
     
 
 
    <aside class="large-3 columns">
 
      <h5>Info</h5>
      <ul class="side-nav">
        <li>
          <div>
            Backers:
            <%= @project.pledges.length %>
          </div>
        </li>
        <li>
          <div>
            Goal: 
            <%= @project.goal_in_cents %>
          </div>
        </li>
        <li>
          <div>
            Deadline:
            <%= @project.deadline.strftime("%A, %B %d, %Y")  %>
          </div>
        </li>
      </ul>
      <div class="button [radius button]">
         <%= link_to 'Make a pledge', :class=> 'pledge_link' %><br>
         <small>$5 minimum pledge</small>
      </div>
     

       <div class="panel">
        <h5>Rewards</h5>
        <div>
          <% @project.rewards.limit(5).each do |r| %>
              <p>Level : $<%= r.level %></p>
              <p>Package : <br><%= r.name %></p>
              <p>Description :<%= r.description %></p>
          <% end %>
        </div>
      </div>
 
 
    </aside>
 
     
  </div>
 
   
 
 
   
 
  <footer class="row">
    <div class="large-12 columns">
      <hr/>
      <div class="row">
        <div class="large-6 columns">
          <p>Â© Copyright no one at all. Go to town.</p>
        </div>
        <div class="large-6 columns">
          <ul class="inline-list right">
            <li><%= link_to 'Edit page', edit_project_path(@project) %></li>
           
            <li><a href="#">Link 3</a></li>
            <li><a href="#">Link 4</a></li>
          </ul>
        </div>
      </div>
    </div>
  </footer>
<% else %>
    <p>Please <%= link_to "log in", new_session_path %> to add a pledge.</p> 

<% end %>


