<div class="row">
  <div class="large-8 large-centered columns">
    <div class="site-forms">

<%= form_for(@project, html: {multipart: true}) do |f| %>
    <% if @project.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved: </h2>

            <ul>
                <% @project.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <div class="le_form">
      <div class="field">
        <div class="small-12 columns">
          <label class= "inline"><%= f.label :Project_name, :class => 'form-label' %></label> 
          <%= f.text_field :name, :placeholder => "Project name" %>
        </div>
      </div>
            
    </div>

    <div class="field">
      <div class="small-12 columns">
        <label class= "inline"><%= f.label :description, :class => 'form-label' %></label>
        <%= f.text_area :description, :placeholder => "Tell us about your project..." %>
      </div>
    </div>

    <div class="field">
      <div class="small-12 columns">
        <label class="inline"><%= f.label :image , :class => 'form-label'%></label>
        <%= f.file_field :image %>
      </div>
    </div>
            


    <div class="field">
        <div class="small-12 columns">
            <label class= "inline"><%= f.label :goal_in_cents, :class => 'form-label' %></label>
            <%= f.number_field :goal_in_cents, :placeholder => 'Goal in cents'  %>
        </div>
    </div>

    <div class="field">
        <div class="small-12 columns">
            <label class= "inline"><%= f.label :deadline, :class => 'form-label' %></label>
            <%= f.select(:deadline, options_for_select(@limit)) %>
        </div>
    </div>

    <!-- This doesnt seems to work with foundation, but was working before  -->


    <div class="field">
        <div id="rewards">
            <%= f.fields_for :rewards do |reward| %>
                <%= render 'reward_fields', :f => reward %>
            <% end %>
            <div class="small-12 columns">
                <div class="links">
                    <%= link_to_add_association 'Add a reward', f, (:rewards), :class => 'button [tiny small large] form-buttons' %> 
                </div>
            </div>
        </div>
    </div>
            
    <!-- this needs to be centered -->
    <div class="actions">
        <div class="small-12 columns">
            <%= f.submit "Create", :class => 'button [tiny small large] form-buttons' %>
        </div>
    </div>
<% end %>

  </div>
  </div>
</div>
