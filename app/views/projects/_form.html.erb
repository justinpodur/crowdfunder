<%= form_for(@project) do |f| %>
    <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
    </div>

    <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
    </div>

    <div>
    <%= f.label :goal_in_cents %>
    <%= f.number_field :goal_in_cents %>
    </div>

    <div>
    <%= f.label :deadline %>
    <%= f.select(:deadline, options_for_select(@limit)) %>
    </div>

    <%= f.submit %>

<% end %>